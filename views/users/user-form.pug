extends  ../layout

block content
    .d-flex.flex-row.content.mx-auto.justify-content-center
        form.card.w-50.mt-5(method="post" action="/users/signup")
            .card-header Signup
            .card-body
                .form-group
                    label Username
                    input.form-control(type="text" name="username")
                    label Email
                    input.form-control(type="email" name="email")
                    label Password
                    input.form-control(type="password" name="password")
                if errors
                    ul.my-2
                        each error in errors
                            li.text-danger= error
                .w-100
                    input.btn.btn-primary.ms-auto.d-block.mt-2(type="submit" value="Signup")